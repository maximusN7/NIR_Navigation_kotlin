<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.MaxEle.maximarius.nir_navigation.OptionsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/textViewEnterlvl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:background="@color/backgroundview"
                android:ems="10"
                android:focusable="auto"
                android:gravity="center"
                android:hint="your lvl"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonOk1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClickOk"
                android:text="@string/ok" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/textViewEnterResh1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:background="@color/backgroundview"
                android:ems="10"
                android:focusable="auto"
                android:gravity="center"
                android:hint="Resh 1"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/textViewEnterResh2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:background="@color/backgroundview"
                android:ems="10"
                android:focusable="auto"
                android:gravity="center"
                android:hint="Resh 2"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/textViewEnterResh3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:background="@color/backgroundview"
                android:ems="10"
                android:focusable="auto"
                android:gravity="center"
                android:hint="Resh 3"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonOk2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClickOk2"
                android:text="@string/ok" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/textViewEnterNyshResh1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:background="@color/backgroundview"
                android:ems="10"
                android:focusable="auto"
                android:gravity="center"
                android:hint="Nysh Resh 1"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/textViewEnterNyshResh2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:background="@color/backgroundview"
                android:ems="10"
                android:focusable="auto"
                android:gravity="center"
                android:hint="Nysh Resh 2"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/textViewEnterNyshResh3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:background="@color/backgroundview"
                android:ems="10"
                android:focusable="auto"
                android:gravity="center"
                android:hint="Nysh Resh 3"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonOk3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClickOk3"
                android:text="@string/ok" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/textViewEnterCurr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:background="@color/backgroundview"
                android:ems="10"
                android:focusable="auto"
                android:gravity="center"
                android:hint="Corr"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonOk4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClickOk4"
                android:text="@string/ok" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/textViewEnterWrong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:background="@color/backgroundview"
                android:ems="10"
                android:focusable="auto"
                android:gravity="center"
                android:hint="Wrong"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonOk5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClickOk5"
                android:text="@string/ok" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="10">

            <Button
                android:id="@+id/buttonBack"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:onClick="onClickBack"
                android:text="@string/back"
                android:textSize="24sp"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="start|bottom"
                />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
