<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/viewMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp"
        >
    <ScrollView
        android:id="@+id/scrolldia"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_margin="5dp"
        android:elevation="2dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textViewDescr1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/imageViewIm1"
                android:layout_width="wrap_content"
                android:layout_height="350dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                />

            <TextView
                android:id="@+id/textViewDescr2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/imageViewIm2"
                android:layout_width="wrap_content"
                android:layout_height="350dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                />

            <TextView
                android:id="@+id/textViewDescr3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/imageViewIm3"
                android:layout_width="wrap_content"
                android:layout_height="350dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                />

            <TextView
                android:id="@+id/textViewDescr4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/imageViewIm4"
                android:layout_width="wrap_content"
                android:layout_height="350dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp" />

        </LinearLayout>
    </ScrollView>
        <Button
            android:id="@+id/buttonBack"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:onClick="onClickBackDial"
            android:text="@string/back"
            android:textSize="24sp"
            android:layout_margin="5dp"
            />
    </LinearLayout>
</RelativeLayout>